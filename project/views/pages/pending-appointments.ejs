<div id="pending-appointments" v-cloak>
  <div class="container">
    <h2 class="heading">PENDING APPOINTMENTS</h2>
    <div class="row">
      <div class="col-md">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col"> ID </th>
              <th scope="col"> Patient Name </th>
              <th scope="col"> Doctor Name </th>
              <th scope="col"> Time of Appointment </th>
              <th scope="col"> Patient Contact Details </th>
              <th scope="col"> Status </th>
            </tr>
          </thead>
          <tbody>
           <% pending.forEach(function(appointment) { %>
                <tr>
                    <td> <%= appointment.id %> </td>
                    <td> <%= appointment.name %> </td>
                    <td> <%= appointment.doctorName %> </td>
                    <td> <%= appointment.time %> </td>
                    <td> <%= appointment.phone %> </td>
                    <td>
                        <ajax-button class="btn-dark btn-lg btn-block" :syncing="syncing" @click="clicked('<%= appointment.id %>')">Mark as done</ajax-button>
                    </td>
                </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
